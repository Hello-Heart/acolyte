<?xml version="1.0" encoding="UTF-8"?>
<project><!-- Only for site generation -->
  <modelVersion>4.0.0</modelVersion>
  <groupId>acolyte</groupId>
  <artifactId>acolyte</artifactId>
  <version>1.0.5</version>
  <packaging>pom</packaging>
  <name>Acolyte</name>

  <prerequisites>
    <maven>3.0.4</maven>
  </prerequisites>

  <scm>
    <url>http://github.com/cchantep/acolyte</url>
  </scm>

  <ciManagement>
    <system>travis-ci</system>
    <url>https://travis-ci.org/cchantep/acolyte</url>
  </ciManagement>

  <issueManagement>
    <system>GitHub</system>
    <url>https://github.com/cchantep/acolyte/issues</url>
  </issueManagement>

  <properties>
    <generatedSite>${project.build.directory}/generated-site</generatedSite>
  </properties>

  <dependencies>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-lang3</artifactId>
      <version>3.1</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
	<artifactId>maven-antrun-plugin</artifactId>
	<executions>
	  <execution>
            <id>generate-site</id>
	    <phase>pre-site</phase>
	    <goals>
	      <goal>run</goal>
	    </goals>

	    <configuration>
	      <tasks>
                <copy todir="${generatedSite}">
                  <fileset dir="${basedir}/src/site" />
                </copy>
                    
                <copy file="${basedir}/readme.md" 
                      tofile="${generatedSite}/markdown/index.md" />

	      </tasks>
	    </configuration>
	  </execution>
	</executions>
      </plugin>

      <plugin>
        <artifactId>maven-javadoc-plugin</artifactId>
        <version>2.9</version>
        <executions>
          <execution>
            <id>generate-javadoc</id>
            <phase>pre-site</phase>
            <goals>
              <goal>javadoc</goal>
            </goals>

            <configuration>
              <sourcepath>${basedir}/core/src/main/java:${basedir}/core/target/src_managed/main</sourcepath>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <plugin>    
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-site-plugin</artifactId>
        <version>3.3</version>

        <dependencies>
          <dependency>
            <groupId>org.apache.maven.doxia</groupId>
            <artifactId>doxia-module-markdown</artifactId>
            <version>1.3</version>
          </dependency>
        </dependencies>

        <configuration>
          <siteDirectory>${project.build.directory}/generated-site</siteDirectory>
          
        </configuration>
      </plugin>
    </plugins>
  </build>

  <reporting>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-project-info-reports-plugin</artifactId>
        <version>2.7</version>
        <reportSets>
          <reportSet>
            <reports>
              <report>scm</report>
              <report>cim</report>
              <report>issue-tracking</report>
            </reports>
          </reportSet>
        </reportSets>
      </plugin>
    </plugins>
  </reporting>
</project>
